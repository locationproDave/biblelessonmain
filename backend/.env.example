# Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Connection
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname
DB_NAME=bible_lesson_db

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=https://biblelessonplanner.com

# AI - Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...

# Payments - Stripe
STRIPE_API_KEY=sk_live_...

# Email - Resend
RESEND_API_KEY=re_...
SENDER_EMAIL=hello@biblelessonplanner.com

# Google Calendar (Optional)
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_ID=primary
GOOGLE_SHARED_CALENDAR_ID=

# Frontend/Backend URLs (for OAuth redirects)
FRONTEND_URL=https://biblelessonplanner.com
BACKEND_URL=https://biblelessonmain-production.up.railway.app
